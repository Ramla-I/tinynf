THIS_DIR := $(abspath $(dir $(lastword $(MAKEFILE_LIST))))

build:
	@make -C $(THIS_DIR)/cwrapper --no-print-directory

# re-export DOTNET_ROOT in case it's not the default value
run:
	@sudo DOTNET_ROOT=$(DOTNET_ROOT) LD_LIBRARY_PATH=$(THIS_DIR)/cwrapper dotnet run --configuration Release --project $(THIS_DIR) -- $(TN_ARGS)

print-nf-name:
	@echo TinyNF
